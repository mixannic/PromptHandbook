<Window x:Class="PromptHandbook.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <StackPanel Margin="15">
        <TextBlock Text="Font Family:" Margin="0,0,0,5"/>
        <ComboBox Name="FontFamilyComboBox" IsEditable="True" />

        <TextBlock Text="Font Size:" Margin="0,10,0,5"/>
        <ComboBox Name="FontSizeComboBox" IsEditable="True" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Click="OKButton_Click" Width="60" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="60"/>
        </StackPanel>
    </StackPanel>
</Window>